{
  "compilerOptions": {
    "lib": ["ES2020"],
    "declaration": true,
    "outDir": "lib/esm",
    "removeComments": true,
    "target": "ES2015",
    "module": "ES2020",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["./**/*.ts"],
  "exclude": [
    "node_modules",
    "tests",
    "lib"
  ]
}
